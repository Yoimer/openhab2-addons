<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="networkcamera"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="motiondetection" extensible="custom-image-channel, custom-motion-trigger">
		<label>Motion Detection</label>
		<description>Receive images from network camera.</description>

		<channels>
			<channel id="image" typeId="image-channel" />
			<channel id="motion-trigger" typeId="motion-trigger" />
		</channels>

		<config-description>
			<parameter name="userName" type="text" required="true">
				<label>User Name</label>
				<description>Username</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<label>Password</label>
				<description>Password</description>
				<context>password</context>
			</parameter>
		</config-description>
	</thing-type>

    <channel-type id="image-channel">
        <item-type>Image</item-type>
        <label>Camera image</label>
        <description>Image from network camera</description>
        <state readOnly="true"></state>
    </channel-type>
    <channel-type id="motion-trigger">
        <kind>trigger</kind>
        <label>Motion detected trigger channel</label>
        <event>
            <options>
                <option value="MOTION_DETECTED">Motion detected</option>
            </options>
        </event>
    </channel-type>

	<channel-type id="custom-image-channel">
		<item-type>Image</item-type>
		<label>Camera image</label>
		<description>Image from network camera</description>
		<state readOnly="true"></state>

		<config-description>
			<parameter name="filename" type="text" required="true">
				<label>Filename</label>
				<description>Filename to match received files. Support regular expression patterns.</description>
			</parameter>
		</config-description>
	</channel-type>
	<channel-type id="custom-motion-trigger">
		<kind>trigger</kind>
		<label>Motion detected trigger channel</label>
		<event>
			<options>
				<option value="MOTION_DETECTED">Motion detected</option>
			</options>
		</event>

		<config-description>
			<parameter name="filename" type="text" required="true">
				<label>Filename</label>
				<description>Filename to match received files. Support regular expression patterns.</description>
			</parameter>
		</config-description>
	</channel-type>

</thing:thing-descriptions>
